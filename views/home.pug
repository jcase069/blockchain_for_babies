extends layout

block content
    - var i_can_see_whom = ["mike.monkey", "jane.jackle"];
    - var who_can_see_me = ["zoe.zebra", "tess.tiger"];
    div.row
        h1.header.center.orange-text Grant Access
        form.col.s12(method="post" action="/grantaccesstoparent")
            if error && error.length > 0
                p.flow-text.red-text=error
            div.row
                div.input-field.col.s12
                    i.material-icons.prefix account_box
                    input(id="username" name="username" type="text")
                    label(for="username") Username
                div.input-field.col.s12
                    input.waves-effect.waves-light.btn(type="submit" value="create")

        div.col.s12
            h3.header.center.orange-text I Can See
            i.material-icons.prefix account_box
            ul
                each value in i_can_see_whom
                  li= value
                else
                  li No one
            label(for="username") Whom I can see
        div.col.s12
            h3.header.center.orange-text Can See Me
            i.material-icons.prefix account_box
            ul
                each value in who_can_see_me
                  li= value
                else
                  li No one
            label(for="username") Who can see me
